<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:paddingVertical="16dp"
    >


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/candidato_foto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.196"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.214" />

    <TextView
        android:id="@+id/nombre_candidato"
        android:layout_width="150dp"
        android:layout_height="24dp"

        android:ellipsize="end"
        android:textSize="14sp"

        android:text="nombre"
        android:gravity="center"

        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.99"
        card_view:layout_constraintStart_toEndOf="@+id/candidato_foto"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.078" />

    <TextView
        android:id="@+id/posicion_candidato"
        android:layout_width="150dp"
        android:layout_height="24dp"

        android:text="posicion"
        android:gravity="center"

        android:ellipsize="end"
        android:textSize="12sp"

        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.994"
        card_view:layout_constraintStart_toEndOf="@+id/candidato_foto"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.311" />

    <TextView
        android:id="@+id/direccion_partido"
        android:layout_width="150dp"
        android:layout_height="24dp"

        android:ellipsize="end"
        android:text="direccion"
        android:gravity="center"

        android:textSize="12sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.994"
        card_view:layout_constraintStart_toEndOf="@+id/candidato_foto"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fecha_partido"
        android:layout_width="150dp"
        android:layout_height="24dp"

        android:ellipsize="end"
        android:text="00/00/0000 - 00:00"
        android:gravity="center"

        android:textSize="12sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.994"
        card_view:layout_constraintStart_toEndOf="@+id/candidato_foto"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.657" />

    <Button
        android:id="@+id/btn_aceptar_candidato"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/success"
        android:text="Aceptar"
        android:textSize="10sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.906"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_rechazar_candidato"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/failed"
        android:text="Rechazar"
        android:textSize="10sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.196"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>

