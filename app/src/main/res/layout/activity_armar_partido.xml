<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.stepstone.stepper.StepperLayout
        android:id="@+id/stepperLayout"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:ms_backButtonText="ATRAS"
        app:ms_backButtonColor="@color/colorPrimary"

        app:ms_nextButtonText="SIGUIENTE"
        app:ms_nextButtonColor="@color/colorPrimary"

        app:ms_completeButtonText="FIN       "
        app:ms_completeButtonColor="@color/white"
        app:ms_completeButtonBackground="@color/colorPrimary"

        app:ms_showBottomNavigation="true"
        app:ms_stepperType="tabs"/>

</androidx.constraintlayout.widget.ConstraintLayout>