<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView

        android:id="@+id/cv"
        android:layout_width="369dp"
        android:layout_height="244dp"
        android:layout_margin="10dp"
        android:clickable="true"

        android:focusable="true"
        android:orientation="vertical"
        card_view:cardElevation="5dp"

        card_view:cardUseCompatPadding="true"
        card_view:contentPaddingBottom="10dp"
        card_view:contentPaddingLeft="5dp"
        card_view:contentPaddingRight="10dp"
        card_view:contentPaddingTop="10dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.049">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/cancha_foto"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/superficie_field"
                android:layout_width="48dp"
                android:layout_height="12dp"
                android:text="Superficie:"
                android:textSize="10sp"


                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="22dp" />

            <TextView
                android:id="@+id/superficie"
                android:layout_width="86dp"
                android:layout_height="15dp"
                tools:layout_editor_absoluteX="248dp"
                tools:layout_editor_absoluteY="22dp" />

            <TextView
                android:id="@+id/cantidad_maxima_field"
                android:layout_width="46dp"
                android:layout_height="28dp"
                android:text="Cantidad maxima:"
                android:textSize="10sp"


                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="72dp" />

            <TextView
                android:id="@+id/cantidad_maxima"
                android:layout_width="86dp"
                android:layout_height="12dp"
                android:textSize="10sp"


                tools:layout_editor_absoluteX="248dp"
                tools:layout_editor_absoluteY="88dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>