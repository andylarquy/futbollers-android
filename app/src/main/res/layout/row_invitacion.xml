<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:paddingVertical="16dp"
    android:id="@+id/cv"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"

    android:layout_margin="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="5dp"

    card_view:contentPaddingTop="10dp"
    card_view:contentPaddingBottom="10dp"
    card_view:contentPaddingRight="10dp"
    card_view:contentPaddingLeft="5dp"
    >


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/partido_foto"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.127"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.17" />

    <TextView
        android:id="@+id/direccion_partido"
        android:layout_width="150dp"
        android:layout_height="24dp"

        android:ellipsize="end"
        android:gravity="center"
        android:text="direccion"

        android:textSize="12sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.994"
        card_view:layout_constraintStart_toEndOf="@+id/candidato_foto"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.18" />

    <TextView
        android:id="@+id/fecha_partido"
        android:layout_width="150dp"
        android:layout_height="24dp"

        android:ellipsize="end"
        android:gravity="center"
        android:text="00/00/0000 - 00:00"

        android:textSize="12sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.994"
        card_view:layout_constraintStart_toEndOf="@+id/candidato_foto"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.479" />

    <Button
        android:id="@+id/dialog_btn_aceptar_invitacion"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/success"
        android:text="Aceptar"
        android:textSize="10sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.939"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.986" />

    <Button
        android:id="@+id/dialog_btn_rechazar_invitacion"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/failed"
        android:text="Rechazar"
        android:textSize="10sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.132"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.986" />


</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
