<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:paddingVertical="16dp"
    >


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/amigo_foto"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.05"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.44" />

        <TextView
            android:id="@+id/amigo_nombre"
            android:layout_width="150dp"
            android:layout_height="24dp"

            android:ellipsize="end"
            android:textSize="14sp"

            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.99"
            card_view:layout_constraintStart_toEndOf="@+id/amigo_foto"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.078" />

        <TextView
            android:id="@+id/posicion_amigo"
            android:layout_width="150dp"
            android:layout_height="24dp"

            android:ellipsize="end"
            android:textSize="12sp"

            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.99"
            card_view:layout_constraintStart_toEndOf="@+id/amigo_foto"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.596" />

    </androidx.constraintlayout.widget.ConstraintLayout>

