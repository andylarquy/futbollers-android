<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"

    android:layout_margin="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="5dp"

    card_view:contentPaddingTop="10dp"
    card_view:contentPaddingBottom="10dp"
    card_view:contentPaddingRight="10dp"
    card_view:contentPaddingLeft="5dp"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            >


            <ImageView
                android:id="@+id/partido_foto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/empresa_nombre"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="48dp"
                android:ellipsize="end"
                android:textSize="20dp"

                card_view:layout_constraintStart_toEndOf="@+id/partido_foto"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/empresa_direccion_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="160dp"

                android:text="Direccion:"
                android:textSize="14dp"

                card_view:layout_constraintStart_toEndOf="@+id/partido_foto"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/empresa_direccion"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="160dp"

                android:textSize="14dp"

                card_view:layout_constraintStart_toEndOf="@+id/empresa_direccion_field"
                card_view:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
