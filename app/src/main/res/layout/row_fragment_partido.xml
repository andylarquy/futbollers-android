<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:id="@+id/cv"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"

    android:layout_margin="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="5dp"

    card_view:contentPaddingTop="10dp"
    card_view:contentPaddingBottom="10dp"
    card_view:contentPaddingRight="10dp"
    card_view:contentPaddingLeft="5dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="16dp">

        <TextView
            android:id="@+id/empresa_nombre"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:ellipsize="end"
            android:textSize="18sp"
            android:gravity="center"

            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.851"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.072" />


        <ImageView
            android:id="@+id/partido_foto"
            android:layout_width="115dp"
            android:layout_height="116dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.016"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.02" />

        <ImageView
            android:id="@+id/check"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_check_green_24"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.963"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tiempo_para_confirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="00/00/00 - 00:00"
            android:textSize="14sp"

            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.845"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.740" />

        <TextView
            android:id="@+id/field_tiempo_para_confirmar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="Fecha limite de reserva:"
            android:textSize="14sp"

            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.920"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.63" />

        <Button
            android:id="@+id/btn_tiempo_para_confirmar"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Confirmar reserva"
            android:textSize="10sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.869"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.981" />

        <TextView
            android:id="@+id/equipo1_nombre"
            android:layout_width="75dp"
            android:layout_height="wrap_content"

            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:text="Equipo 1"
            android:textSize="12sp"

            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.595"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.265" />

        <TextView
            android:id="@+id/jugadores_para_confirmar"
            android:layout_width="156dp"
            android:layout_height="wrap_content"

            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:text="X jugadores para confirmar"
            android:textSize="12sp"

            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.945"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/versus"
            android:layout_width="16dp"
            android:layout_height="15dp"

            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:text="vs"
            android:textSize="12sp"

            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.735"
            card_view:layout_constraintVertical_bias="0.266"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/equipo2_nombre"
            android:layout_width="68dp"
            android:layout_height="wrap_content"

            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:text="Equipo 2"
            android:textSize="12sp"

            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.942"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.271" />

        <TextView
            android:id="@+id/partido_fecha_jugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"
            android:gravity="center"
            android:text="00/00/00 - 00:00"
            android:textSize="13sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.869" />

        <TextView
            android:id="@+id/empresa_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"
            android:gravity="center"
            android:text="Direccion 432"
            android:textSize="13sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.014"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
