<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar"> -->

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:activatedBackgroundIndicator">@drawable/activatedbackground</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="navTextActive"  parent="Widget.Design.NavigationView">
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="navTextInActive"  parent="Widget.Design.NavigationView">
        <item name="itemTextColor">@color/purpeInactive</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


</resources>
